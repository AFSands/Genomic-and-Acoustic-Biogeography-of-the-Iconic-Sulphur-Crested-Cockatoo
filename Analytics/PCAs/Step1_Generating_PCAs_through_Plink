## NOTE1: This script uses the outputs from the final step of the WGR processing as the initial input.
## NOTE2: This script contains two lists of samples to be removed for each of the PCAs (see Step1_removesamples1 & Step1_removesamples2). These are called "removesamples1" and "removesamples2"
## NOTE3: These lines of code were run through an interactive node on Puhti (https://www.puhti.csc.fi/public/).
#########################################################################

module load plink/1.90
module load gatk
module load biokit

#change permissions
chmod -R 777 *

#Interspecific PCA (99 samples = 95 x C. galerita, 2 x C. sulphurea, 2 x C. alba) - Note maf is adjusted so that alleles need to be present in at least two full samples to account for the outgroups pop sizes.
plink --file allspecimens_VQSRpassSNPs_mergedNoUnWZ --remove removesamples1 --recode vcf --out inter_VQSRpassSNPs_mergedNoUnWZ 
gatk SelectVariants -V inter_VQSRpassSNPs_mergedNoUnWZ.vcf -O inter_VQSRpassSNPs_mergedNoUnWZ_variants.vcf --exclude-non-variants
vcftools --vcf inter_VQSRpassSNPs_mergedNoUnWZ_variants.vcf --plink --out inter_VQSRpassSNPs_mergedNoUnWZ_variants
rm inter_VQSRpassSNPs_mergedNoUnWZ.vcf
rm inter_VQSRpassSNPs_mergedNoUnWZ_variants.vcf
plink --file inter_VQSRpassSNPs_mergedNoUnWZ_variants --make-bed --recode --out inter_VQSRpassSNPs_mergedNoUnWZ_variants
plink --bfile inter_VQSRpassSNPs_mergedNoUnWZ_variants --maf 0.0202 --make-bed --out inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202
plink --bfile inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202 --indep-pairwise 50 5 0.2 --out inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202
plink --bfile inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202 --extract inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202.prune.in --make-bed --distance triangle ibs 1-ibs allele-ct --out inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202_ldprune_PCA1
module load plink/2
plink2 --bfile inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202_ldprune_PCA1 --pca 10 --allow-extra-chr --autosome-num 23 --bad-freqs --out /scratch/project_2006079/scc_AUSPNG_raw_data/F22FTSHMHT0382_ANIztblR/soapnuke/Plink/Analysis1_PCA/PCA1_inter/inter_VQSRpassSNPs_mergedNoUnWZ_variants_maf00202_ldprune_PCA1 
### Samples in output = 99; SNPs remaining in output = 2,221,243

#change permissions
chmod -R 777 *

#Intraspecific PCA (88 samples = 70 x C.g.galerita, 14 x C.g.fitzroyi, 4 x C.g.triton complex; excluding C.g.triton Oro) - Note maf is adjusted so as that alleles need to be present in at least two full samples.
module load plink/1.90
plink --file allspecimens_VQSRpassSNPs_mergedNoUnWZ --remove removesamples2 --recode vcf --out intra_VQSRpassSNPs_mergedNoUnWZ
gatk SelectVariants -V intra_VQSRpassSNPs_mergedNoUnWZ.vcf -O intra_VQSRpassSNPs_mergedNoUnWZ_variants.vcf --exclude-non-variants
vcftools --vcf intra_VQSRpassSNPs_mergedNoUnWZ_variants.vcf --plink --out intra_VQSRpassSNPs_mergedNoUnWZ_variants
rm intra_VQSRpassSNPs_mergedNoUnWZ.vcf
rm intra_VQSRpassSNPs_mergedNoUnWZ_variants.vcf
plink --file intra_VQSRpassSNPs_mergedNoUnWZ_variants --make-bed --recode --out intra_VQSRpassSNPs_mergedNoUnWZ_variants
plink --bfile intra_VQSRpassSNPs_mergedNoUnWZ_variants --maf 0.0227 --make-bed --out intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227
plink --bfile intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227 --indep-pairwise 50 5 0.2 --out intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227
plink --bfile intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227 --extract intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227.prune.in --make-bed --distance triangle ibs 1-ibs allele-ct --out intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227_ldprune_PCA2_Admix
module load plink/2
plink2 --bfile intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227_ldprune_PCA2_Admix --pca 10 --allow-extra-chr --autosome-num 23 --bad-freqs --out /scratch/project_2006079/scc_AUSPNG_raw_data/F22FTSHMHT0382_ANIztblR/soapnuke/Plink/Analysis1_PCA/PCA2_intra/intra_VQSRpassSNPs_mergedNoUnWZ_variants_maf00227_ldprune_PCA2 
### Samples in output = 88; SNPs remaining in output = 1,745,807

#change permissions
chmod -R 777 *


